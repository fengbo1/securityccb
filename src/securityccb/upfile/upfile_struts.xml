<struts>	
	
    <!-- 系统常量定义，定义上传文件字符集编码 -->  
    <constant name="struts.i18n.encoding" value="utf-8"></constant>  
    <!-- 系统常量定义，定义上传文件临时存放路径 -->  
    <constant name="struts.multipart.saveDir" value="c:\temp_upload\"></constant> 
    <!-- 系统常量定义，定义上传文件大小限制 --> 
    <constant name="struts.multipart.maxSize" value="104857600" /> 


	
	<package name="upfile_default" extends="struts-default" >

        <action name="upfile" class="securityccb.upfile.Upfile">  
           
            <result name="success">/page/securityccbanbaobu.jsp</result> 
           
        </action> 
         
         
		

	</package>
</struts>    
